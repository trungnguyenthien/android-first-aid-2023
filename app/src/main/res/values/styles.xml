<resources>
    <style name="MessageToggleButtonStyle" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/message_toggle_button</item>
    </style>

    <style name="Widget.Theme.FirstAid.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

    <!-- Defined a new style with three items of color. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>


    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/lavender</item>

        <!-- Support library compatibility -->
        <item name="background">@color/lavender</item>
    </style>

    <style name="Widget.Theme.FirstAid.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/ghost_white</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>